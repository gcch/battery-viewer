<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout_switch"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:orientation="vertical"
    android:padding="@dimen/switchPadding" >

    <FrameLayout
        android:id="@+id/frameLayout_switch"
        android:layout_width="@dimen/switchCircleDiameter"
        android:layout_height="@dimen/switchCircleDiameter" >

        <ImageView
            android:id="@+id/imageView_bg_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/switchDescription"
            android:src="@drawable/switch_bg_color_primary" />

        <ImageView
            android:id="@+id/imageView_icon_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/switchDescription"
            android:src="#00000000" />

        <ToggleButton
            android:id="@+id/toggleButton_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:text=""
            android:textOff=""
            android:textOn="" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView_switch"
        android:layout_width="@dimen/switchCircleDiameter"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text=""
        android:textColor="@color/colorGray"
        android:textSize="@dimen/switchTextSize" />

</LinearLayout>